@using Common.Client.UI.View
@using BlazorTodoSmart.Models
@using BlazorTodoSmart.MVVM.Interface
@inject NavigationManager NavManager



@if (viewmodel.IsFirstLoad || viewmodel.IsLoading)
{
    <p>Loading....</p>
}
else
{
    <ul class="listview image-listview">
        <li>
            <a class="item" @onclick="@(() => Navigate(null))">
                <div class="icon-box bg-primary">
                    <ion-icon name="albums-outline" role="img" class="md hydrated" aria-label="image outline"></ion-icon>
                </div>
                <div class="in">
                    <div>Inbox</div>
                    @if (viewmodel.NumItemInbox > 0)
                    {
                        <span class="badge badge-danger">@viewmodel.NumItemInbox</span>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }

                </div>
            </a>
        </li>
        <li>
            <a class="item" @onclick="@(() => Navigate(DateTime.Now))">
                <div class="icon-box bg-secondary">
                    <ion-icon name="calendar-number-outline" role="img" class="md hydrated" aria-label="videocam outline"></ion-icon>
                </div>
                <div class="in">
                    <div>Today</div>
                    @if (viewmodel.NumItemToday > 0)
                    {
                        <span class="badge badge-danger">@viewmodel.NumItemToday</span>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </div>
            </a>
        </li>
        <li>
            <a class="item" @onclick="@(() => Navigate(DateTime.Now,1))">
                <div class="icon-box bg-danger">
                    <ion-icon name="calendar-outline" role="img" class="md hydrated" aria-label="musical notes outline"></ion-icon>
                </div>
                <div class="in">
                    <div>Upcoming</div>
                    @if (viewmodel.NumItemUpcoming > 0)
                    {
                        <span class="badge badge-danger">@viewmodel.NumItemUpcoming</span>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </div>
            </a>
        </li>
    </ul>
}













