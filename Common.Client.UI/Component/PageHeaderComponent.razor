<div class="appHeader bg-primary text-light scrolled is-active">
    <div class="left">
        @if (IsGoBackActive)
        {
            <a type="button" @onclick="OnClickBack" class="headerButton">
                <ion-icon name="chevron-back-outline" role="img" class="md hydrated" aria-label="chevron back outline"></ion-icon>
            </a>

            

        }
        else
        {
            <a href="#" class="headerButton" data-bs-toggle="modal" data-bs-target="#sidebarPanel">
                <ion-icon name="menu-outline"></ion-icon>
            </a>
        }


    </div>
    <div class="pageTitle">@HeaderTitle</div>
    <div class="right"></div>
</div>

@code
{
    [Parameter]
    public bool IsGoBackActive { get; set; } = true;

    [Parameter]
    public string HeaderTitle { get; set; }

    [Parameter]
    public EventCallback OnClickBack { get; set; }
}


